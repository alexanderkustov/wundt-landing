									<input type="submit" value="Subscrever" style="margin-top:-10px; width: 45%;" name="subscribe" id="mc-embedded-subscribe" class="btn btn-info pull-right">
								</form>
			<br>
			<%= render_shareable :buttons=> ['twitter', 'facebook'] %>
		</div>

	</div>
	<br>
	<div class="row">
		<div class="col-md-3 col-md-offset-1" style="color:white; background: rgba(0,0,0,0.61); border: 1px solid #222; border-radius:4px; padding:15px; margin-top:15px;">
